{
  "name": "api",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "build": "babel src --extensions  \".js,.ts\" --out-dir dist --copy-files",
    "start": "npx dotenv -e .env.development -- node ./dist/shared/infra/http/server.js",
    "dev": "npx dotenv -e .env.development -- ts-node-dev -r tsconfig-paths/register --transpile-only --ignore-watch node_modules ./src/shared/infra/http/server.ts",
    "seed": "npx prisma migrate deploy && npx prisma generate && npx prisma db seed",
    "test": "npx dotenv -e .env.test -- npm run seed && dotenv -e .env.test -- jest"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@prisma/client": "^4.15.0",
    "bcrypt": "^5.1.0",
    "cors": "^2.8.5",
    "dotenv": "^16.1.4",
    "dotenv-cli": "^7.2.1",
    "express-async-errors": "^3.1.1",
    "jsonwebtoken": "^9.0.0",
    "reflect-metadata": "^0.1.13",
    "supertest": "^6.3.3",
    "ts-node-dev": "^2.0.0",
    "tsconfig-paths": "^4.2.0",
    "tsyringe": "^4.7.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.17.6",
    "@babel/core": "^7.17.9",
    "@babel/node": "^7.16.8",
    "@babel/plugin-proposal-class-properties": "^7.16.7",
    "@babel/plugin-proposal-decorators": "^7.17.9",
